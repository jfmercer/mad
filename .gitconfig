# git user & Github credentials are set as env variables. See README for more
# info.
[alias]
	    st = status
	    co = checkout
	    c = commit -m
	    a = add
	    di = diff
	    bra = branch -a
	    last = log -1 HEAD

[apply]
	# Detect whitespace errors when applying a patch
	whitespace = fix

[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	grep = auto

[core]
	excludesfile = ~/.gitignore
	editor = vim

[credential]
		helper = osxkeychain
